<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:padding="15dp"
              android:gravity="center_horizontal">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_foto_membro_selecionado"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/padrao"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FFFFFFFF"
                    app:layout_constraintTop_toBottomOf="@+id/include"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginBottom="16dp" android:paddingEnd="4dp" android:paddingStart="4dp"/>
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp" app:srcCompat="@drawable/ic_baseline_cancel_24"
                    android:id="@+id/imageView2" android:contentDescription="@android:string/cancel"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tv_membros_selecionado"
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="@string/title"
                android:textColor="@android:color/black"
                android:textSize="16sp" android:textAlignment="center"/>
</LinearLayout>